<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:background="@color/colorLightPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.newwesterndev.gpsalarm.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:titleTextColor="#FFFFFF">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/toolbar_image"/>

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/alarm_list"
        android:paddingTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/new_alarm_image"
        android:paddingTop="425dp"
        android:paddingRight="75dp"
        android:paddingEnd="75dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/new_alarm_image"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/new_alarm_fab"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:elevation="8dp"
        android:background="@color/colorPrimaryDark"
        android:src="@drawable/ic_alarm_add_white_36dp"
        android:contentDescription="@string/cd_fab"/>

</FrameLayout>
